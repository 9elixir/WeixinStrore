/* pages/home/index.wxss */
page {
  background-color: rgba(211, 211, 211, 0.4);
  height: 100%;
  font-size: 28rpx;
  line-height: 1.6;
}
.section {
  margin: 0rpx 0 20rpx 0;
}
.home-page-header {
  padding: 0rpx 0rpx;
}
.swiper-image {
  width: 100%;
  height: 300rpx;
  border-radius: 0rpx 0rpx 16rpx 16rpx;
  /*overflow: hidden;*/
}
.goods-list {   
  display: flex;   
  flex-direction: row;   
  flex-wrap: wrap;   
  justify-content:space-evenly;   
  align-items: stretch; 
  /* align-content: flex-start; */ 
  /* margin-top: 10rpx; */   background: #f5f5fd; 
} 
 
.goods-card {   
  display: flex;  
  flex-direction: column; 
  justify-content: center;   
  align-items: left; 
  /* position: relative; */   
  /* box-sizing: border-box; */  
   width: 345rpx;   
   /* height: 400rpx; */   
   margin-bottom: 20rpx;   
   /* margin: 5rpx; */ 
  /* padding: 5rpx; */ 
  /* background: transparent; */   
  /* background-color: #f8f8f8; */   
  background-color: white;   
  border-radius: 0 0 16rpx 16rpx; 
  /* overflow: hidden; */ 
} 
 
.goods-card-image {   
  align-self: center;   
  width: 340rpx;   
  max-height: 360rpx; 
} 
 
.goods-card-body {   
  display: flex;   
  flex-direction: column;   
  justify-content: center;   
  align-items: flex-start;   
  gap: 10rpx;   
  padding: 16rpx 24rpx 18rpx; 
} 
 
.goods-card-title {   
  font-size: 28rpx;   
  height: 3rem;   
  overflow: hidden;   
  word-break: break-word; 
} 
 
.goods-card-tag {   display: inline; 
  /* padding: 0 16rpx 0 0; */   
  border-radius: 12rpx; 
